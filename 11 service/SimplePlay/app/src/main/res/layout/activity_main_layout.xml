<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_simple_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.android.com.simpleplay.Aty.MainActivity">

    <TextView
        android:id="@+id/tv_alarm_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alarm_service" />

    <Button
        android:id="@+id/btn_call_alarm_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/call_alarm_service" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/exit" />

    <TextView
        android:text="@string/music_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_start_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_play" />

    <Button
        android:id="@+id/btn_stop_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stop_play" />
</LinearLayout>
